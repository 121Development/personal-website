---
import Layout from '../layouts/Layout.astro';
import { fetchContentSection } from '../lib/content';

const cv = await fetchContentSection('cv.md');
---

<Layout title="CV - Erik's Homepage">
  {cv ? (
    <div class="content" set:html={cv.content} />
  ) : (
    <div>
      <h1>CV</h1>
      <p>Content not available. Please add a cv.md file to your content repository.</p>
    </div>
  )}
</Layout>
