---
import Layout from '../../layouts/Layout.astro';
import { fetchBlogPosts } from '../../lib/content';

const posts = await fetchBlogPosts();
---

<Layout title="Blog - Erik's Homepage">
  <div class="blog-header">
    <h1>Blog</h1>
    <div class="view-toggle">
      <button class="toggle-btn active" data-view="expanded" aria-label="Expanded view">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="18" height="18" rx="2"/>
          <line x1="3" y1="9" x2="21" y2="9"/>
          <line x1="9" y1="21" x2="9" y2="9"/>
        </svg>
      </button>
      <button class="toggle-btn" data-view="compact" aria-label="Compact view">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="8" y1="6" x2="21" y2="6"/>
          <line x1="8" y1="12" x2="21" y2="12"/>
          <line x1="8" y1="18" x2="21" y2="18"/>
          <line x1="3" y1="6" x2="3.01" y2="6"/>
          <line x1="3" y1="12" x2="3.01" y2="12"/>
          <line x1="3" y1="18" x2="3.01" y2="18"/>
        </svg>
      </button>
    </div>
  </div>

  {posts.length > 0 ? (
    <ul class="post-list" id="post-list">
      {posts.map((post) => (
        <li class="post-item" data-has-image={post.image ? "true" : "false"}>
          {post.image && (
            <a href={`/blog/${post.slug}`} class="post-image-link">
              <img src={post.image} alt={post.title} class="post-image" loading="lazy" />
            </a>
          )}
          <div class="post-content">
            <div class="post-meta">
              <span class="post-date">{post.date}</span>
            </div>
            <h2 class="post-title">
              <a href={`/blog/${post.slug}`}>{post.title}</a>
            </h2>
            {post.excerpt && (
              <p class="post-excerpt">{post.excerpt}</p>
            )}
          </div>
        </li>
      ))}
    </ul>
  ) : (
    <p>No blog posts found. Add markdown files to the blog/ directory in your content repository.</p>
  )}
</Layout>

<style>
  .blog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .blog-header h1 {
    margin-bottom: 0;
  }

  .view-toggle {
    display: flex;
    gap: 0.5rem;
    background: var(--bg-secondary);
    padding: 0.25rem;
    border-radius: 8px;
    border: 1px solid var(--border);
  }

  .toggle-btn {
    background: transparent;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    border-radius: 6px;
    color: var(--text-muted);
    transition: all var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .toggle-btn:hover {
    color: var(--text-primary);
  }

  .toggle-btn.active {
    background: var(--accent);
    color: white;
  }

  .toggle-btn svg {
    width: 20px;
    height: 20px;
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-item {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--border);
    transition: all var(--transition);
  }

  .post-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px var(--shadow);
  }

  /* Expanded view (default) */
  .post-image-link {
    display: block;
    margin-bottom: 1rem;
    border-radius: 8px;
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    transition: transform var(--transition);
  }

  .post-image-link:hover .post-image {
    transform: scale(1.02);
  }

  .post-meta {
    margin-bottom: 0.5rem;
  }

  .post-date {
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-title {
    font-size: 1.25rem;
    margin: 0.5rem 0;
    font-weight: 600;
  }

  .post-title a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color var(--transition);
  }

  .post-title a:hover {
    color: var(--accent);
  }

  .post-excerpt {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin: 0.5rem 0 0;
    line-height: 1.5;
  }

  /* Compact view */
  :global(.compact) .post-item {
    padding: 1rem 1.5rem;
    margin-bottom: 0.75rem;
  }

  :global(.compact) .post-image-link {
    display: none;
  }

  :global(.compact) .post-excerpt {
    display: none;
  }

  :global(.compact) .post-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  :global(.compact) .post-meta {
    margin-bottom: 0;
    min-width: 100px;
  }

  :global(.compact) .post-title {
    margin: 0;
    font-size: 1.1rem;
  }

  :global(.compact) .post-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
  }

  @media (max-width: 640px) {
    .blog-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    :global(.compact) .post-item {
      flex-direction: column;
      align-items: flex-start;
    }

    :global(.compact) .post-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>

<script>
  const toggleBtns = document.querySelectorAll('.toggle-btn');
  const postList = document.getElementById('post-list');

  // Load saved preference
  const savedView = localStorage.getItem('blogView') || 'expanded';
  if (savedView === 'compact') {
    postList?.classList.add('compact');
    toggleBtns.forEach(btn => {
      btn.classList.toggle('active', btn.getAttribute('data-view') === 'compact');
    });
  }

  toggleBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const view = btn.getAttribute('data-view');

      toggleBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      if (view === 'compact') {
        postList?.classList.add('compact');
      } else {
        postList?.classList.remove('compact');
      }

      localStorage.setItem('blogView', view || 'expanded');
    });
  });
</script>
